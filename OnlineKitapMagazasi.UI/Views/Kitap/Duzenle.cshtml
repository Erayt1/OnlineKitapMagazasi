@model OnlineKitapMagazasi.UI.Models.Kitap

<h2>Kitap Güncelle</h2>

<form asp-action="Duzenle" method="post" enctype="multipart/form-data">
    <input type="hidden" asp-for="Id" />
    <div class="mb-3">
        <label>Başlık</label>
        <input asp-for="Baslik" class="form-control" />
    </div>
    <div class="mb-3">
        <label>Yazar</label>
        <input asp-for="Yazar" class="form-control" />
    </div>
    <div class="mb-3">
        <label>Fiyat</label>
        <input asp-for="Fiyat" type="number" step="0.01" class="form-control" />
    </div>
    <div class="mb-3">
        <label>Mevcut Resim</label><br />
        <img src="@Model.ResimUrl" style="height:150px;" />
    </div>
    <div class="mb-3">
        <label>Yeni Resim (istersen)</label>
        <input type="file" name="YeniResim" class="form-control" />
    </div>
    <button type="submit" class="btn btn-warning">Güncelle</button>
</form>

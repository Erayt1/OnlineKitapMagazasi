@model OnlineKitapMagazasi.UI.Models.Kitap

<h2>Yeni Kitap Ekle</h2>

<form asp-action="Ekle" method="post" enctype="multipart/form-data">
    <div class="mb-3">
        <label>Başlık</label>
        <input asp-for="Baslik" class="form-control" />
    </div>
    <div class="mb-3">
        <label>Yazar</label>
        <input asp-for="Yazar" class="form-control" />
    </div>
    <div class="mb-3">
        <label>Fiyat</label>
        <input asp-for="Fiyat" type="number" step="0.01" class="form-control" />
    </div>
    <div class="mb-3">
        <label>Kapak Resmi</label>
        <input type="file" name="ResimDosyasi" class="form-control" />
    </div>
    <button type="submit" class="btn btn-success">Kaydet</button>
</form>
